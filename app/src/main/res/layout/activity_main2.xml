<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/rectangle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/green"
        android:layout_marginTop="0dp"
        />

    <EditText
        android:id="@+id/editTextNotificaçoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notificações"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:inputType="textPersonNotificaçoes"
        android:background="@null"
        android:layout_marginTop="60dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="230dp"
        />

    <EditText
        android:id="@+id/editTextData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:inputType="textPersonData"
        android:background="@null"
        android:layout_marginTop="110dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="16dp"
        />

    <View
        android:id="@+id/rectangle"
        android:background="@drawable/border"
        android:layout_height="150dp"
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        />

    <View
        android:id="@+id/rectangle"
        android:background="@drawable/border"
        android:layout_height="150dp"
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        />

    <View
        android:id="@+id/rectangle"
        android:background="@drawable/border"
        android:layout_height="150dp"
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="540dp"
        />

    <Button
        android:id="@+id/myButton2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="305dp"
        android:text="+ Criar"
        android:background="@drawable/border3"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        />

    <ImageButton
        android:id="@+id/lixeira_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lixeira"
        android:contentDescription="@string/lixeira_descricao"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="165dp"
        android:layout_marginStart="365dp"
        />

    <ImageButton
        android:id="@+id/lixeira_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lixeira"
        android:contentDescription="@string/lixeira_descricao"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="365dp"
        android:layout_marginStart="365dp"
        />

    <ImageButton
        android:id="@+id/lixeira_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lixeira"
        android:contentDescription="@string/lixeira_descricao"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="555dp"
        android:layout_marginStart="365dp"
        />

</RelativeLayout>